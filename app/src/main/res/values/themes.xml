<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/green_principal</item>
    </style>

    <style name="Theme.FinTrack" parent="Base.Theme.FinTrack" />

    // style para os titulos dos imputs
    <style name="TitleImput" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">8dp</item>
    </style>

    // style para os numeros
    <style name="Number" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    // style dos titulos dos cards
    <style name="TitleCard" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    // style dos toolbar
    <style name="TitleToolBar" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    // style do vg heard
    <style name="vg_heard" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>


</resources>